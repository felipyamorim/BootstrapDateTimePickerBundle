{% block date_picker_widget %}
    {% if picker_icon == true %}
        <div data-format="{{ picker_format }}" class="datetimepicker input-group date mb-lg">
            <input type="text" {{ block('widget_attributes') }} class="form-control" value="{{ value }}">
                <span class="input-group-addon">
                <span class="fa fa-calendar"></span>
            </span>
        </div>
    {% else %}
        <input type="text" {{ block('widget_attributes') }} class="form-control datetimepicker" data-format="{{ picker_format }}" value="{{ value }}">
    {% endif %}
{% endblock %}

